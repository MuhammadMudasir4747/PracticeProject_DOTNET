@model Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid rounded shadow" alt="@Model.Title" />
        </div>
        <div class="col-md-6">
            <h2>@Model.Title</h2>
            <p><strong>Author:</strong> @Model.Author</p>
            <p><strong>ISBN:</strong> @Model.ISBN</p>
            <p><strong>Category:</strong> @Model.Category.Name</p>
            <p><strong>Description:</strong> @Model.Description</p>
            <h4 class="text-primary">Price: Rs. @Model.Price</h4>

            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary mt-3">← Back to Products</a>
        </div>
    </div>
</div>
