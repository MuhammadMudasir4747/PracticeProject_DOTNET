@model PracticeProject.Models.ApplicationUser

@{
    ViewData["Title"] = "Signup";
}

<div class="container mt-5 d-flex justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="card shadow-lg p-4 rounded" style="width: 100%; max-width: 450px;">
        <h3 class="text-center mb-4 text-primary">Create Your Account</h3>

        <form asp-action="Signup" method="post">
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Full Name</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                    <input asp-for="Name" class="form-control" required />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                    <input asp-for="Password" class="form-control" type="password" required />
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-person-plus-fill"></i> Sign Up
                </button>
            </div>

            <div class="text-center">
                <span>
                    Already have an account?
                    <a asp-action="Login" asp-controller="Account" asp-area="Customer">Login here</a>
                </span>
            </div>
        </form>

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-danger mt-3 text-center">
                @ViewBag.Message
            </div>
        }
    </div>
</div>
