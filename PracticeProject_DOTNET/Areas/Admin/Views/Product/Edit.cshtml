@using PracticeProject.Models
@model Product

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Product</h2>
            <hr />
        </div>

        <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <label>Product Title</label>
            <input asp-for="Title" type="text" class="form-control" />
        </div>

        <div class="mb-3">
            <label>Description</label>
            <input asp-for="Description" type="text" class="form-control" />
        </div>
        <div class="mb-3">
            <label>ISBN</label>
            <input asp-for="ISBN" type="text" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Author</label>
            <input asp-for="Author" type="text" class="form-control" />
        </div>
        <div class="mb-3">
            <label>ListPrice</label>
            <input asp-for="ListPrice" type="text" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Price</label>
            <input asp-for="Price" type="text" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Price50</label>
            <input asp-for="Price50" type="text" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Price100</label>
            <input asp-for="Price100" type="text" class="form-control" />
        </div>


        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-primary form-control">Update</button>
            </div>
            <div class="col-6">
                <a asp-controller="Product" asp-action="Index" class="btn btn-secondary border form-control">Back to List</a>
            </div>
        </div>
    </div>
</form>
