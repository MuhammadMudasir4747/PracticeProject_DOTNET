@model List<Category>

    <div class="container">

        <div class="row">

            <div class="col-md-6">

            <h2 class="mt-3 text-center">Categories list</h2>

            <table class="table table-bordered table-striped text-center">

                <thead>
                    <tr>
                        <th>Category Name</th>
                        <th>Display Order</th>
                    </tr>
                    <tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
                    {
                        <tr>
                            <td>@obj.Name</td>
                            <td>@obj.DisplayOrder</td>
                        </tr>
                    }
                </tbody>



            </table>

            </div>


        <div class="col-md-6 text-end mt-3">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                Create New Category <i class="bi bi-plus-lg"></i>
            </a>


        </div>




        </div>

</div>