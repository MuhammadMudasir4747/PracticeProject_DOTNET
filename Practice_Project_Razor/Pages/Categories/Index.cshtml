@page
@model Practice_Project_Razor.Pages.Categories.IndexModel

@if (TempData["success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
        @TempData["success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container">

    <div class="row">

        <div class="col-md-6">

            <h2 class="mt-3 text-center">Categories list</h2>

            <table class="table table-bordered table-striped text-center">

                <thead>
                    <tr>
                        <th>Category Name</th>
                        <th>Display Order</th>
                        <th></th>
                    </tr>
                    <tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model.CategoryList.OrderBy(u => u.DisplayOrder))
                    {
                        <tr>
                            <td>@obj.Name</td>
                            <td>@obj.DisplayOrder</td>
                            <td>
                                <div class="w-75 btn-group" role="group">
                                    <a asp-page="categories/edit"  asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                        <i class="bi bi-pen"></i>
                                    </a>

                                    <a asp-page="categories/delete"  asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="col-md-6 text-end mt-3">
            <a asp-page="/categories/create"class="btn btn-primary">
                Create New Category <i class="bi bi-plus-lg"></i>

            </a>

        </div>

    </div>

</div>