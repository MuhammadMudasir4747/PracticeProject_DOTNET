@page "{id:int}"
@model Practice_Project_Razor.Pages.Categories.DeleteModel

<h2>Delete Category</h2>

@if (Model.Category != null)
{
    <p>Are you sure you want to delete category <strong>@Model.Category.Name</strong>?</p>

    <form method="post">
        <input type="hidden" asp-for="Category.Id" />
        <button type="submit" class="btn btn-danger">Confirm Delete</button>
        <a asp-page="/Categories/Index" class="btn btn-secondary">Cancel</a>
    </form>
}
else
{
    <p>Category not found.</p>
}
